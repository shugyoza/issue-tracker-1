extends head.pug

block content
  div(class='py-3')
    a(class='btn top-bookmark btn-green' id='add-issue' href=`/user/${user._id}/issue/add` role='button') add issue
    a(class='btn top-bookmark btn-purple' id='find-issue' href=`/user/${user._id}/issue/find` role='button') find issue
    a(class='btn this-bookmark' href=`/user/${user._id}/issue` role='button') issues
    a(class='btn top-bookmark btn-maroon' href=`/user/${user._id}` role='button') user account
  div(class='container')
    table(class='table table-striped table-hover')
      thead(class='thead-dark')
        tr
          th(scope='col') Project
          th(scope='col') Issue Type
          th(scope='col') Summary
          th(scope='col') Description
          th(scope='col') Reporter
          th(scope='col') Assignee
          th(scope='col') Status
          th(scope='col') Last Update
          th(scope='col')
      tbody
        each issue in issues
          tr
            td= issue.project
            td= issue.issue_type
            td= issue.summary
            td= issue.description
            td= issue.reporter
            td= issue.assignee
            td= issue.status
            td= issue.updated
            td
              a(class='btn btn-blue' href=`/user/${user._id}/issue/${issue._id}/update` role='button') update
              a(class='btn btn-red' href=`/user/${user._id}/issue/${issue._id}/delete` role='button') delete
  include footer
