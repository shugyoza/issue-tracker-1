extends head.pug

block content
  nav(class='top')
    h1(class='button top-bookmark bg-black') Issue Tracker
    div(class='py-3')
      a(class='button top-bookmark bg-green' href=`/user/add` role='button') Add User
      span(class='button top-bookmark bg-purple')
      span(class='button top-bookmark bg-orange')
      span(class='button top-bookmark bg-blue')
      span(class='button top-bookmark bg-pink')
  div(class='container')
    div(class='sub-head')
      a(class='logout txt-red' href=`/`) Logout
      h2 #{ title }
    table(class='table table-striped table-hover')
      thead(class='thead-dark')
        tr
          th(scope='col') First Name
          th(scope='col') Last Name
          th(scope='col') Email
          th(scope='col')
      tbody
        each user in users.reverse()
          tr
            td= user.first_name
            td= user.last_name
            td= user.email
            td(class='update-delete')
              a(class='button bg-blue' href=`/user/${user._id}/edit` role='button') Edit
              a(class='button bg-red' href=`/user/delete/${user._id}` role='button') Delete
  include footer.pug
