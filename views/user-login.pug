extends head.pug

include utils.pug

block content
  div(class='container')
    +validationErrorSummary(errors)
    form(action='/user/login' method='post')
      input(type='hidden' name='_csrf' value=csrfToken)
      div(class='form-group')
        label(for='email') Email
        input(type='text' id='email' name='email' value=user.email placeholder='e.g. johnsnow@email.com' class='form-control')
      div(class='form-group')
        label(for='password') Password
        input(type='text' id='password' name='password' value=user.password placeholder='e.g. Password123' class='form-control')
      div(class='py-4')
        button(type='submit' class='btn btn-blue') User Login
        a(href='/' class='btn btn-orange') Cancel
        a(href='/user/add' class='btn btn-green') Create New User
