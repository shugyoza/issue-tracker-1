extends head.pug

include utils.pug

block content
  div(class='top')
    a(class='btn top-bookmark btn-black' href='/' id='h1')
      h1 Issue Tracker
    div(class='py-3')
      a(class='btn top-bookmark btn-green' href=`/user/${user._id}/issue/add` role='button') Add
      a(class='btn top-bookmark btn-purple' href=`/user/${user._id}/issue/find` role='button') Find
      a(class='btn top-bookmark btn-blue' href=`/user/${user._id}/issue` role='button') Issues
      a(class='btn this-bookmark' role='button') Delete
      a(class='btn top-bookmark btn-maroon' href=`/user/${user._id}` role='button') Account
  div(class='container')
    +validationErrorSummary(errors)
    form(action=`/user/${user._id}/edit` method='post')
      include user-form-fields.pug
      div(class='py-4')
        button(type='submit' class='btn btn-blue') Save Edit
        a(href=`/user/${user._id}` class='btn btn-orange') Cancel
        a(class='btn btn-red' href=`/user/${user._id}/delete` role='button') Delete
