extends head.pug

include utils.pug

block content
  nav(class='top')
    h1(class='button top-bookmark bg-black') Issue Tracker
    div(class='py-3')
      a(class='button top-bookmark bg-green' href=`/user/${user._id}/issue/add` role='button') Add
      a(class='button top-bookmark bg-purple' href=`/user/${user._id}/issue/find` role='button') Find
      a(class='button top-bookmark bg-blue' href=`/user/${user._id}/issue` role='button') Issues
      a(class='button this-bookmark' aria-hidden='true') Delete
      a(class='button top-bookmark bg-maroon' href=`/user/${user._id}` role='button') Account
      a(class='button top-bookmark bg-pink' aria-hidden='true')
  div(class='container')
    div(class='sub-head')
      a(class='logout txt-red' href=`/`) Logout
      h2 #{ title }
    div(class='alert alert-danger' role='alert')
      p Are you sure you want to delete this user?
    form(action=`/user/${user._id}/delete` method='post')
      include user-form-fields.pug
      div(class='py-4')
        a(class='button bg-orange' href=`/user/${user._id}`) Cancel
        button(class='button bg-red' type='submit' href=`/user/${user._id}/delete`) #{ title }

  include footer.pug
