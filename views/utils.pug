mixin validationErrorSummary(errors)
  if errors
    div(class='alert alert-danger' role='alert')
      p We got error(s):
      ul
        each error in errors
          li= error

mixin success(successMsg)
  if successMsg
    div(class='alert alert-success' role='alert')
      p #{ successMsg }

