mixin history(logs)
  if logs
    div(class='form-group')
      label Updates History
      ul(class='list-group list-group-flush')
        each log in logs
          div(class='inner') Update on #{ log.updated }
            p= log.project ? `Project Name: ${log.project}` : ''
            p= log.issue_type ? `Issue Type: ${log.issue_type}` : ''
            p= log.summary ? `- Summary: ${log.summary}` : ''
            p #{ log.description ? `- Description: ${log.description}` : '' }
            p= log.reporter ? `- Reporter: ${log.reporter}` : ''
            p= log.priority ? `- Priority: ${log.priority}` : ''
            p= log.assignee ? `- Assignee: ${log.assignee}` : ''
            p= log.status ? `- Status: ${log.status}` : ''
            p= log.inputter_id ? `- Input by user ID: ${log.inputter_id}` : ''

mixin textField(labelText, fieldName, fieldValue, placeholder)
  div(class='form-group')
    label(for=fieldName)= labelText
    input(type='text' id=fieldName name=fieldName value=fieldValue class='form-control' placeholder=placeholder)
