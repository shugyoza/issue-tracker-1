  label(for='title') Title
  input(type='text' id='title' name='title' value=issue.title placeholder='e.g. Div not centered' class='form-control')
div(class='form-group')
  label(for='remark') Detail
  input(type='text' id='remark' name='remark' value=issue.remark placeholder='e.g. All the details here.' class='form-control')
div(class='form-group')
  label(for='creator') Creator
