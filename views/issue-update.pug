extends head.pug

include utils.pug

block content
  +validationErrorSummary(errors)
  nav(class='top')
    h1(class='button top-bookmark bg-black') Issue Tracker
    div(class='py-3')
      a(class='button top-bookmark bg-green' href=`/user/${user._id}/issue/add` role='button') Add
      a(class='button top-bookmark bg-purple' href=`/user/${user._id}/issue/find` role='button') Find
      span(class='button this-bookmark') Update
      a(class='button top-bookmark bg-orange' href=`/user/${user._id}/issue` role='button') Issues
      a(class='button top-bookmark bg-maroon' href=`/user/${user._id}` role='button') Account
      a(class='button top-bookmark bg-pink' href='/readme' role='button') Read Me
  div(class='container')
    div(class='sub-head')
      a(class='logout txt-red' href=`/`) Logout
      h2 #{ title }
    form(action=`/user/${user._id}/issue/${issue._id}/update` method='post')
      include form-find-update-issue.pug
      div(class='py-4')
        button(class='button bg-blue' type='submit') Save Update
        button(class='button bg-orange' onclick='window.location.reload();' type='button') Reset Fields
        a(class='button bg-red' href=`/user/${user._id}/issue/${issue._id}/delete` role='button') Delete Issue
  include footer.pug
