extends head.pug

include utils.pug

block content
  nav(class='top')
    h1(class='button top-bookmark bg-black' role='button') Issue Tracker
    div(class='py-3')
      a(class='button top-bookmark bg-green' href=`/user/${user._id}/issue/add` role='button') Add
      a(class='button top-bookmark bg-purple' href=`/user/${user._id}/issue/find` role='button') Find
      a(class='button top-bookmark bg-blue' href=`/user/${user._id}/issue` role='button') Issues
      a(class='button this-bookmark' role='button') Delete
      a(class='button top-bookmark bg-maroon' href=`/user/${user._id}` role='button') Account
  div(class='container')
    h2 #{ title }
    +validationErrorSummary(errors)
    form(action=`/user/${user._id}/edit` method='post')
      include user-form-fields.pug
      div(class='py-4')
        button(class='button bg-blue' type='submit') #{ title }
        a(class='button bg-orange' href=`/user/${user._id}` ) Cancel
        a(class='button bg-red' href=`/user/${user._id}/delete` role='button') Delete
  include footer.pug
