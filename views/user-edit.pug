extends head.pug

include utils.pug

block content
  div(class='py-3')
    a(class='btn top-bookmark btn-green' href=`/user/${user._id}/issue/add` role='button') add issue
    a(class='btn top-bookmark btn-purple' href=`/user/${user._id}/issue/find` role='button') find issue
    a(class='btn top-bookmark btn-blue' href=`/user/${user._id}/issue` role='button') issues
    a(class='btn this-bookmark' href=`/user/${user._id}` role='button') user account
  div(class='container')
    +validationErrorSummary(errors)
    form(action=`/user/${user._id}/edit` method='post')
      include user-form-fields.pug
      div(class='py-4')
        button(type='submit' class='btn btn-blue') Edit User
        a(href=`/user/${user._id}` class='btn btn-orange') Cancel
        a(class='btn btn-red' href=`/user/${user._id}/delete` role='button') Delete User
