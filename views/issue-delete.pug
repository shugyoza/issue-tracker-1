extends head.pug

include utils.pug

block content
  +validationErrorSummary(errors)
  nav(class='top')
    h1(class='button top-bookmark btn-black' role='button') Issue Tracker
    div(class='py-3')
      a(class='button top-bookmark btn-green' href=`/user/${user._id}/issue/add` role='button') Add
      a(class='button top-bookmark btn-purple' href=`/user/${user._id}/issue/find` role='button') Find
      a(class='button this-bookmark' role='button') Delete
      a(class='button top-bookmark btn-orange' href=`/user/${user._id}/issue` role='button') Issues
      a(class='button top-bookmark btn-maroon' href=`/user/${user._id}` role='button') Account
  div(class='container')
    div(class='alert alert-danger' role='alert')
      p Are you sure you want to delete this issue?
    form(action=`/user/${user._id}/issue/${issue._id}/delete` method='post')
      include issue-form-fields.pug
      div(class='py-4')
        button(type='submit' class='button btn-red') Delete Issue
        a(href=`/user/${user._id}/issue/${issue._id}/update` class='button btn-orange') Cancel Delete
