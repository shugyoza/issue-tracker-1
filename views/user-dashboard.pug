extends head.pug

include utils.pug

block content
  +validationErrorSummary(errors)
  nav(class='top')
    h1(class='btn top-bookmark btn-black' role='button') Issue Tracker
    div(class='py-3')
      a(class='btn top-bookmark btn-green' href=`/user/${user._id}/issue/add` role='button') Add
      a(class='btn top-bookmark btn-purple' href=`/user/${user._id}/issue/find` role='button') Find
      a(class='btn top-bookmark btn-orange' href=`/user/${user._id}/issue` role='button') Issues
      a(class='btn this-bookmark' role='button') Account

  div(class='container')
    div(class='inner')
      p First Name: #{first_name}
      p Last Name: #{last_name}
      p Email: #{email}

    div(class='py-3')
      a(class='btn btn-blue' href=`/user/${user._id}/edit` role='button') Edit
      a(class='btn btn-red' href=`/user/${user._id}/delete` role='button') Delete
