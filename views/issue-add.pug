extends head.pug

include utils.pug

block content
  nav(class='top')
    h1(class='button top-bookmark bg-black') Issue Tracker
    div(class='py-3')
      span(class='button this-bookmark') Add
      a(class='button top-bookmark bg-purple' href=`/user/${user._id}/issue/find` role='button') Find
      a(class='button top-bookmark bg-orange' href=`/user/${user._id}/issue` role='button') Issues
      a(class='button top-bookmark bg-maroon' href=`/user/${user._id}` role='button') Account
      span(class='button top-bookmark bg-pink')
  div(class='container')
    div(class='sub-head')
      a(class='logout txt-red' href=`/`) Logout
      h2 #{ title }
    +validationErrorSummary(errors)
    form(action=`/user/${user._id}/issue/add` method='post')
      include form-add-issue.pug
      div(class='py-4')
        button(class='button bg-green' type='submit') #{ title }
        button(onclick='window.location.reload();' type='button' class='button bg-orange') Clear Fields
  include footer.pug
