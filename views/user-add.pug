extends head.pug

include utils.pug

block content
  nav(class='top')
    h1(class='button top-bookmark bg-black') Issue Tracker
    div(class='py-3')
      a(class='button this-bookmark' role='button' aria-disabled=true) Create User
      a(class='button top-bookmark bg-green' href='/user/login/' role='button') Login
      a(class='button top-bookmark bg-purple' aria-disabled=true)
      a(class='button top-bookmark bg-orange' aria-disabled=true)
      a(class='button top-bookmark bg-maroon' aria-disabled=true)
      a(class='button top-bookmark bg-pink' aria-disabled=true)
  div(class='container')
    div(class='sub-head')
      a(class='logout txt-red' href=`/`)
      h2 #{ title }
    +validationErrorSummary(errors)
    form(action='/user/add' method='post')
      include user-form-fields.pug
      div(class='py-4')
        a(class='button bg-orange' href='/user/add') Reset Fields
        button(class='button bg-green' type='submit') Create User
        a(class='button bg-red' href='/') Cancel
  include footer.pug
