extends head.pug

include utils.pug

block content
  nav(class='top')
    h1(class='button top-bookmark btn-black' role='button') Issue Tracker
    div(class='py-3')
      a(class='button top-bookmark btn-green' role='button')
      a(class='button top-bookmark btn-purple' role='button')
      a(class='button top-bookmark btn-orange' role='button')
      a(class='button top-bookmark btn-maroon' role='button')
      a(class='button top-bookmark btn-pink' href='/readme') Read Me
  div(class='container')
    +validationErrorSummary(errors)
    form(action='/user/add' method='post')
      include user-form-fields.pug
      div(class='py-4')
        a(href='/user/add' class='button btn-orange') Reset Fields
        button(type='submit' class='button btn-green') Create User
        a(href='/' class='button btn-red') Cancel
